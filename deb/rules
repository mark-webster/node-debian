#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1


BUILDDIR=debian/nodejs/usr

configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.
	#./configure --debug --prefix `pwd`/$(BUILDDIR)
	./configure --prefix `pwd`/$(BUILDDIR)
	touch $@


build: build-stamp
build-stamp: configure-stamp  
	dh_testdir
	# Add here commands to compile the package.
	$(MAKE)
	touch $@


clean: 
	dh_testdir
	dh_testroot
	rm -rf build-stamp configure-stamp debian/nodejs
	# Add here commands to clean up after the build process.
	$(MAKE) distclean
	dh_clean 


install: build
	dh_testdir
	dh_testroot
#	dh_installdirs
	dh_prep
	# Add here commands to install the package into debian/nodejs
	$(MAKE) install
	@echo '*******************************************************'
	-mv -v $(BUILDDIR)/bin/node $(BUILDDIR)/bin/nodejs
	-mv -v $(BUILDDIR)/share/man/man1/node.1 $(BUILDDIR)/share/man/man1/nodejs.1
	-if [ ! -f $(BUILDDIR)/lib/node_modules/npm/scripts/relocate.sh ]; then cp -v debian/relocate.sh $(BUILDDIR)/lib/node_modules/npm/scripts; fi
	#cp -L node_g debian/nodejs/usr/bin


# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
#	dh_installdocs
#	dh_installexamples
##	dh_install
##	dh_installmenu
##	dh_installdebconf	
##	dh_installlogrotate
##	dh_installemacsen
##	dh_installpam
##	dh_installmime
##	dh_python
	dh_installinit
##	dh_installcron
##	dh_installinfo
	dh_installman debian/node-waf.1
	dh_link
#	dh_strip
#	dh_compress
	dh_fixperms
##	dh_perl
##	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure

